<%=render 'layouts/innerpage'%>

<div class="container page-content ">
  <div class="row">
    <!-- left links -->
    <div class="col-md-3">
      <div class="profile-nav">
        <div class="widget">
          <div class="widget-body">
            <div class="user-heading round">
              <a href="#">
                <img src=<%= asset_path 'guy-5.jpg' %> alt="">
              </a>
              <p>
                <%=current_user.full_name %>
              </p>
            </div>
            <ul class="nav nav-pills nav-stacked">
              <li class="active">
                 </i> <%= link_to "MY Profile Tab" , user_path(current_user) %>
              </li>       
            </ul>
          </div>
        </div>
      </div>
    </div>
    <!-- end left links -->
    

    <!-- center posts -->
<div class="col-md-6">
  <div class="row">
    <!-- left posts-->
    <div class="col-md-12">
      <div class="row">
        <div class="col-md-12">
          <!-- post state form -->
          <div class="row">
            <div class="ui-widget">
              <%= simple_form_for @friend_request do |f| %>
                <div class="row" >
                  <div class="col-md-10">
                    <%= email_field_tag 'email', nil, data: {autocomplete_source: email_search_users_path}, id: 'user_email', class: "form-control", placeholder: "Enter Email for search user", required: true %>   
                  </div>
                  <div class="col-md-2  ">
                    <%= f.submit "Submit", class: "btn btn-azure pull-right" %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
          <br>
          <div class="row">
            <%= form_for(@feed, :html=> {class: "form-horizontal", role: "form"}) do |f|%>
              <div class="box profile-info n-border-top">
                <form>
                  <%=f.text_field :post, class: "form-control input-lg p-text-area", placeholder: "Whats in your mind today?", autofocus: true%>
                </form>                      
                <div class="box-footer box-form">
                  <%=f.submit class: "btn btn-azure pull-right"%>
                    <p >
                      <%= f.file_field :image %>
                    </p>
                    <ul class="feed-post-form-input">
                      <li>
                        <%=f.radio_button :status, 'only_me'%>
                        <%=f.label :status, 'Only me' %>
                        <%=f.radio_button :status, 'for_all' %>
                        <%=f.label :status, 'public' %>
                        <%=f.radio_button :status, 'friends' %>
                        <%=f.label :status, 'friends' %>
                      </li>
                    </ul>
                </div>
              <%end%>
            </div>
        </div>
        <% @feeds.each do |feed|%>
          <% user = feed.user %>
            <div class="box box-widget">
              <div class="box-header with-border">
                <div class="user-block">
                  <img class="img-circle" src=<%= asset_path 'guy-5.jpg' %>  alt="User Image">
                  <span class="username"><a href="#"> <%= feed.user.first_name if feed.user %></a></span>
                  <span class="description"> <%= feed.created_at %></span>
                </div>
                <div class="box-tools">
                  <button type="button" class="btn btn-box-tool" data-widget="collapse">
                  <% if current_user == user %>
                    <%=link_to edit_feed_path(feed) do %>
                      <i class="fa fa-minus" style="color: black;"></i></button>
                      <button type="button" class="btn btn-box-tool" data-widget="remove">
                      <%=link_to feed_path(feed), method: :delete , data: {confirm: "Are you sure"} do %>
                        <i class="fa fa-times" style="color: black; border-color: #ccc;" ></i></button>
                      <% end %>
                    <% end %>
                  </button>
                  <% end %>
            </div>
 
                      <div class="user-block">  
                        <span class="username"><%#= user.first_name %></span>      
                      </div>

                      <div class="box-body" style="display: block;">
                        <p>
                          <%= feed.post %>  
                        </p>
                        <%= image_tag(feed.image)%>
                          <!-- <button type="button" class="btn btn-default btn-xs"><i class="fa fa-share"></i> Share</button> -->
                         
                          <!-- <span class="pull-right text-muted">127 likes - 3 comments</span> -->
                          <%if current_user.bookmarks.pluck(:feed_id).include?(feed.id)%>
                            <%#= link_to'<i class="icon-ok icon-white"></i> Bookmark Saved'.html_safe%>
                            <%= link_to '<button type="button" class="btn btn-default btn-xs"><i class="fa fa-thumbs-o-up"></i>Bookmark Saved</button>'.html_safe%>
                            <%#= button_to "Bookmark saved",{class: 'btn btn-default btn-xs'}%>
                          <%else%>
                            <%= link_to '<button type="button" class="btn btn-default btn-xs"><i class="fa fa-thumbs-o-up"></i>Bookmark </button>'.html_safe, {:controller => "bookmarks", :action => "create", :feed_id => feed.id }, :method => :post%>
                          <%end%>
                      </div>
                    </div>
                  </div>
              <% end %>
<!-- end post state form -->


              </div>
            </div>
          </div>
      <!-- end left posts-->
        </div>
      </div>
      <!-- end  center posts -->

      <!-- right posts -->
      <!-- end right posts -->
    </div>
  </div>
<div>
  <%= link_to "facebook friends" , facebooks_facebook_profile_path, class: "btn btn-xs btn-success"%>
</div>
<script>
  $( function() {

    $( "#user_email" ).autocomplete({
    source: $("#user_email").data('autocomplete-source')
    });

  } );
</script>