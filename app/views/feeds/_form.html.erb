
<%= render 'layouts/innerpage'%>
<div class="wrapper">
   <div class="parallax filter-black">
      <div class="parallax-image"></div>
          <div class="small-info">
            <div class="col-sm-10 col-sm-push-1 col-md-6 col-md-push-3 col-lg-6 col-lg-push-3">
            
              <div class="card-group animated flipInX">
                <div class="card">
                  <div class="card-block">
                    <div class="center">
                      <h4 class="m-b-0"><span class="icon-text">Feed</span></h4>  
                <div class="row">
                  <div class="col-xs-12">

                    <%= form_for(@feeds, :html => {class: "form-horizontal", role: "form"}) do |f|%>

                    <div class="form-group">
                        <div class="control-label col-sm-2">
                          <%= f.label :post%> 
                        </div>
                        <div class="col-sm-8">
                          <%= f.text_field :post, class: "form-control", placeholder: "status", autofocus: true%>
                          <div class="feed-post-form-input">
                          <%= f.radio_button :status, 'only_me'%>
                          <%= f.label :status, 'Only me' %>

                          <%= f.radio_button :status, 'for_all' %>
                          <%= f.label :status, 'public' %>

                          <%= f.radio_button :status, 'friends' %>
                          <%= f.label :status, 'friends' %>
                        </div>
                        </div>
                      
                        
                      
                    </div>

                                 
